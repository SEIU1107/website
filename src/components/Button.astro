---
export interface Props {
    text: string;
    href: string;
}

const { text = "Enter Text", href = "/" } = Astro.props as Props;
---

<a
    href={href}
    class="inline-block rounded-md px-2 py-2 bg-purple-primary text-white text-center uppercase tracking-wide hover:bg-purple-darker active:bg-purple-darkest focus:outline-none focus:ring focus:ring-offset-white"
    >{text}</a
>

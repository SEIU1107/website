---
import NewsGrid from "../NewsGrid.astro";
import Button from "../Button.astro";
const updates = await Astro.glob("/src/posts/updates/*.md");
const articles = await Astro.glob("/src/posts/news articles/*.md");
const pressReleases = await Astro.glob("/src/posts/press releases/*.md");
const previews = updates
    .concat(articles)
    .concat(pressReleases)
    .sort((a, b) => (a.frontmatter.date < b.frontmatter.date ? 1 : -1))
    .slice(0, 3);
---

<section
    class="p-7 bg-gradient-to-bl from-honey-flower-900 to-honey-flower-500"
>
    <h1
        class="text-supernova-500 text-5xl m-auto text-center font-Trebuchet font-bold"
    >
        Latest in SEIU 1107
    </h1>

    <NewsGrid
        previews={previews}
        breakpoints="sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
    />

    <div class="flex m-auto flex-col sm:flex-row justify-center">
        <div class="p-2 flex justify-center">
            <Button
                text="Union Updates"
                href="/posts/news_updates/"
                color="bg-supernova-500 hover:bg-supernova-600 text-honey-flower-800"
            />
        </div>

        <div class="p-2 flex justify-center">
            <Button
                text="Press Releases"
                href="/posts/press_releases/"
                color="bg-supernova-500 hover:bg-supernova-600 text-honey-flower-800"
            />
        </div>

        <div class="p-2 flex justify-center">
            <Button
                text="SEIU In The News"
                href="/posts/news_articles/"
                color="bg-supernova-500 hover:bg-supernova-600 text-honey-flower-800"
            />
        </div>
    </div>
</section>

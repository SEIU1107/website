---
export interface Props {
    title?: string;
    href?: string;
}

const { title, href } = Astro.props as Props;
---

<a href={href}>
    <li
        class="max-w-md bg-white p-5 m-5 rounded-md shadow-md shadow-black hover:shadow-honey-flower-950 hover:shadow-lg flex-col transition ease-in-out duration-200 hover:bg-gradient-to-br hover:from-supernova-200 hover:to-supernova-400 hover:scale-105 hover:md:scale-110 hover:-translate-y-1 active:scale-100"
    >
        {
            title ? (
                <h1 class="text-honey-flower-800 max-w-xs text-lg md:text-xl pb-1.5 text-left font-bold font-Trebuchet">
                    {title} <span class="px-2">&rarr;</span>
                </h1>
            ) : (
                <div />
            )
        }

        <slot />
    </li>
</a>

<style>
    .link-card {
        background-size: 400%;
        border-radius: 0.6rem;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow:
            0 4px 6px -1px rgba(0, 0, 0, 0.1),
            0 2px 4px -2px rgba(0, 0, 0, 0.1);
    }

    .link-card > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: 1rem 1.3rem;
        border-radius: 0.35rem;
        color: #111;
        background-color: white;
        opacity: 0.8;
    }

    h1 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    .link-card:is(:hover, :focus-within) {
        background-position: 0;
        background-image: linear-gradient(
            45deg,
            rgb(124, 58, 237;),
            #da62c4 30%,
            white 60%
        );
    }
    .link-card:is(:hover, :focus-within) h2 {
        color: rgb(124, 58, 237;);
    }
</style>

---
export interface Props {
    title?: string;
    href?: string;
}

const { title, href } = Astro.props as Props;
---

<a href={href}>
    <li
        class="max-w-md bg-white p-5 m-5 rounded-md shadow-md shadow-black hover:shadow-honey-flower-950 hover:shadow-lg flex-col transition ease-in-out duration-200 hover:bg-gradient-to-br hover:from-supernova-200 hover:to-supernova-400 hover:scale-105 hover:md:scale-110 hover:-translate-y-1"
    >
        {
            title ? (
                <h1 class="text-honey-flower-800 max-w-xs text-lg md:text-xl pb-1.5 text-left font-bold font-Trebuchet">
                    {title} <span class="px-2">&rarr;</span>
                </h1>
            ) : (
                <div />
            )
        }

        <slot />
    </li>
</a>

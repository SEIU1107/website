---
import Button from './Button.svelte';
export interface Props {
    title: string;
    jobDesc: string;
}

const { title, jobDesc } = Astro.props as Props;
---

<div class="flex flex-col">
    <p class="font-Trebuchet text-left font-bold text-black text-3xl py-5">
        {title}
    </p>
    <div class="pb-2.5">
        <slot />
    </div>
    <div class="max-w-lg flex justify-center m-auto">
        <Button text="View Full Job Description" href={jobDesc} />
    </div>
</div>

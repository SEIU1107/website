---
export interface Props {
    profileImg: string; // Image of the portrait; a square
    name: string;
    title: string;
    desc: string; // Text description
}

const {profileImg, maxWidth,name, title, desc} = Astro.props as Props;
---

<div class="card-container" >
    <img src={profileImg} alt="">
    <h2><strong>
        {name}
    </strong></h2>
    <p style="font-size: 16px; color: #582C83; "><i><b>{title}</b></i></p>
    <p>{desc}</p>
</div>

<style>
    .card-container {
        max-width: 500px;
        padding: 10px;
    }
</style>
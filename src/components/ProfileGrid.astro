---
import ProfileCard from "./ProfileCard.astro";

import type { Profile } from "../Profile";
export interface Props {
    data: Profile[];
}

const { data } = Astro.props as Props;
---

<div class="flex justify-center content-center m-auto">
    <div
        class="mx-7 grid gap-4 grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4"
    >
        {data.map((curPerson) => <ProfileCard person={curPerson} />)}
    </div>
</div>

<style>
    .grid .container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        grid-column-gap: 0;
        margin: auto;
    }
</style>

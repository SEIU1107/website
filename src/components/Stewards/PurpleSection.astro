---
export interface Props {
    title: string;
}

const { title = "" } = Astro.props as Props;
---

<div class="bg-gradient-to-b from-honey-flower-600 to-honey-flower-900">
    <div
        class="text-white font-bold font-Trebuchet text-center py-10 text-5xl shadowClass"
    >
        {title}
    </div>
    <slot />
</div>

<style>
    .shadowClass {
        text-shadow: 3px 3px 3px black;
    }
</style>

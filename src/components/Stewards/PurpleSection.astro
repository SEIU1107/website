---
export interface Props {
    title: string;
}

const { title = "" } = Astro.props as Props;
---

<div class="bg-gradient-to-b from-purple-primary to-purple-secondary">
    <div class="title">{title}</div>
    <slot />
</div>

<style>
    .title {
        text-shadow: 3px 3px 3px #000;
        color: #ffffff;
        font-family: Georgia, sans-serif;
        font-weight: bolder;
        text-align: center;
        padding: 40px;
        font-size: 40px;
    }
</style>

---
import Header from "../components/Header/Header.astro";
import Footer from "../components/Footer.astro";
export interface Props {
    title?: string;
    centered?: string;
    backgroundStyling?: string /* Background styling via TailwindCSS */;
}

const {
    title = "SEIU Local 1107",
    centered = "false",
    backgroundStyling = "bg-gradient-to-b from-honey-flower-100 to-honey-flower-300",
} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body
        class={backgroundStyling
            ? "font-Roboto leading-6 text-base text-neutral-800 ".concat(
                  backgroundStyling
              )
            : "font-Roboto leading-6 text-base text-neutral-800 bg-honey-flower-100"}
    >
        <Header />
        {
            centered === "true" ? (
                <div class="flex flex-col max-w-screen-sm lg:max-w-screen-lg px-3 m-auto">
                    <slot />
                </div>
            ) : (
                <slot />
            )
        }
        <Footer />
    </body>
</html>

<style>
    html,
    body {
        max-width: 100%;
        overflow-x: hidden;
    }
</style>

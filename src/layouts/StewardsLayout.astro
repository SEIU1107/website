---
import HeadingTitle from "../components/HeadingTitle.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

export interface Props {
    title: string;
    short_name?: string;
}

const { title = "Enter Shop Name", short_name } = Astro.props as Props;

const page_title = "SEIU 1107 " + (short_name ?? title) + " Stewards";
---

<Layout title={page_title}>
    <HeadingTitle text={title} />

    <slot />
</Layout>

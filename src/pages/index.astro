---
import Layout from "../layouts/Layout.astro";
import LatestNews from "../components/Index/LatestNews.astro";
import SocialMediaFeeds from "../components/Index/SocialMediaFeeds.astro";
import StrongerTogether from "../components/Index/StrongerTogether.astro";
import HeadingTitle from "../components/HeadingTitle.svelte";
import CollageImage from "../components/CollageImage.astro";
import LinkText from "../components/LinkText.astro";
import Button from "../components/Button.svelte";
import StringCycle from "../components/StringCycle.svelte";

import imgTogether from "../images/index/JoinTogether.jpg";
import imgTraining from "../images/strength_training/BigRoom.jpg";

// Banners
import imgLatinoLogo from "../images/caucuses/Latino/TransparentLogo.png";
import imgStewardsTraining from "../images/strength_training/StewardsTraining.jpg";
import imgKamala from "../images/index/Kamala.png";

// Communities United
import imgOverview from "../images/communities_united/2023/Overview.jpg";
import imgGold from "../images/communities_united/2023/Gold.jpg";
import imgCups from "../images/communities_united/2023/Cups.jpg";
import imgPolynesian from "../images/communities_united/2023/Polynesian.jpg";
import imgTaiko from "../images/communities_united/2023/Taiko.jpg";
import imgTea from "../images/communities_united/2023/Tea.jpg";
import imgFeather from "../images/communities_united/2023/Feather.jpg";
import imgViolin from "../images/communities_united/2023/Violin.jpg";
import imgQueens from "../images/communities_united/2023/Queens.jpg";
import imgFoodTruck from "../images/communities_united/2023/FoodTruck.jpg";
import imgHenna from "../images/communities_united/2023/Henna.jpg";
import imgJewelry from "../images/communities_united/2023/Jewelry.jpg";
import Subtitle from "../components/Subtitle.svelte";
---

<Layout>
  <main
    class="hidden lg:hidden bg-cover bg-top lg:bg-left bg-[url(/src/images/index/HomecareMobile.png)] h-full mx-auto w-full"
  >
    <div class="flex flex-col lg:flex-row xl:mx-10">
      <div
        class="lg:hidden pt-5 text-white tinyShadow font-Trebuchet font-bold uppercase text-center text-5xl max-w-screen-sm m-auto"
      >
        Watch SEIU 1107's 2023 Recap!
      </div>
      <div class="mx-auto py-5 hidden lg:block lg:pt-20">
        <iframe
          width="672"
          height="378"
          src="https://www.youtube.com/embed/VEipjl7Pc4U?si=xUQ4S0rhiO8cpzB8"
          title="YouTube video player"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen></iframe>
      </div>
      <div
        class="flex flex-col mx-auto pb-20 lg:m-0 lg:ml-auto justify-between max-w-md lg:max-w-screen-md"
      >
        <div
          class="hidden lg:block pt-5 text-white tinyShadow font-Trebuchet font-bold uppercase text-center text-5xl lg:text-6xl max-w-screen-sm m-auto"
        >
          SEIU Nevada's 2023 Recap!
        </div>
        <h1
          class="shadowClass uppercase font-bold mx-5 py-5 font-Roboto text-center text-supernova-400 text-6xl lg:text-7xl"
        >
          When we fight, we win!
        </h1>
        <div class="mx-auto lg:max-w-screen-sm pt-10">
          <Button
            text="Watch on Youtube"
            href="https://youtu.be/VEipjl7Pc4U?si=zUoBcD9ZaKm_FHOi"
            styling="bg-supernova-400 hover:bg-supernova-500 text-honey-flower-800 scale-125 hover:scale-[145%] lg:scale-150 lg:hover:scale-[160%] active:bg-supernova-600"
            ;
          />
        </div>
      </div>
    </div>
  </main>

  <!-- 
    <main
    class="bg-cover bg-top lg:bg-left bg-[url(/src/images/index/HomecareMobile.png)] lg:bg-[url(/src/images/index/HomecareGraphic.jpg)] h-full mx-auto w-full"
  >
    <div
      class="flex flex-col mx-auto lg:m-0 lg:ml-auto justify-between max-w-md lg:max-w-screen-md py-10 lg:py-12"
    >
      <div
        class="text-white tinyShadow font-Trebuchet font-bold uppercase py-5 text-center text-3xl lg:text-4xl max-w-screen-sm m-auto lg:m-0 lg:ml-auto lg:pr-3"
      >
        Nevada's Health Care, Home Care, and Public Workers
      </div>
      <div class="lg:max-w-screen-sm m-auto lg:m-0 lg:ml-auto">
        <h1
          class="shadowClass uppercase font-bold mx-5 font-Roboto text-center text-supernova-400 text-6xl lg:text-7xl"
        >
          United For Quality Services
        </h1>
      </div>
    </div>
  </main>
   -->

  <div class="bg-gradient-to-bl from-supernova-300 to-supernova-500 py-4">
    <HeadingTitle text="Communities United 2024: A Multicultural Festival" />
    <h2
      class="text-center font-bold text-3xl lg:text-4xl font-Roboto text-black italic my-1.5"
    >
      FREE ADMISSION! Food, Music, Art, Markets, Live Performance, and More!
    </h2>
    <div
      class="mx-auto md:pt-5 max-w-[90vw] md:max-w-screen-md lg:max-w-screen-lg flex flex-col"
    >
      <CollageImage
        srcList={[
          imgOverview,
          imgTaiko,
          imgGold,
          imgViolin,
          imgFeather,
          imgFoodTruck,
          imgTea,
          imgHenna,
          imgCups,
          imgQueens,
          imgJewelry,
          imgPolynesian,
        ]}
        duration={8000}
        fadeDuration={1000}
        horizontal="right"
        imageStyle="shadow-black shadow-sm rounded-md m-auto max-w-[90vw] md:max-w-lg lg:max-w-2xl"
      >
        <div class="flex flex-col text-black text-left text-lg">
          <p class="py-2">
            Communities United: Raising The Stakes is back for 2024!
          </p>
          <p class="py-2">
            SEIU Local 1107 is proudly hosting the Communities United
            Multicultural Festival, which celebrates the state's diversity and
            encourages civic engagement, voter participation, and understanding
            across racial and identity lines.
          </p>
          <p class="py-2">
            The festival will feature thrilling live performances, music, art,
            children's activities, food, and vendors from many diverse cultures
            and communities!
          </p>
          <p class="py-2">
            The festival will take place on <b>Saturday, September 21st</b> from
            <b>3pm - 8pm</b> at the <b
              >Clark County Government Center Ampitheater.</b
            >
          </p>
        </div>
      </CollageImage>
      <h2 class="text-2xl md:text-3xl font-bold text-center py-3">
        SAVE THE DATE! RSVP on Mobilize today!
      </h2>
      <div class="flex flex-col md:flex-row content-center">
        <Button
          text="RSVP on Mobilize"
          styling="mt-5 mx-auto text-white scale-125 hover:scale-[140%] bg-honey-flower-800 hover:bg-honey-flower-950 active:bg-purple-darkest"
          href="https://www.mobilize.us/seiunevada/event/643057/"
          target="_blank"
        />
        <Button
          text="2024 Page"
          styling="mt-5 mx-auto text-white scale-125 hover:scale-[140%] bg-honey-flower-800 hover:bg-honey-flower-950 active:bg-purple-darkest"
          href="/communities_united_2024"
        />
        <Button
          text="2023 Festival Recap"
          styling="mt-5 mx-auto text-white scale-125 hover:scale-[140%] bg-honey-flower-800 hover:bg-honey-flower-950 active:bg-purple-darkest"
          href="/communities_united_2023"
        />
      </div>
    </div>
  </div>
  <div
    class="bg-gradient-to-br from-red-200 via-white to-blue-200 py-4 flex flex-col m-auto"
  >
    <HeadingTitle
      text="SEIU 1107 Supports Cadidates that WIN for Us!"
      styling="m-auto font-Trebuchet font-bold text-center text-honey-flower-800 py-5"
    />
    <div class="m-auto py-2 max-w-[90vw] md:max-w-screen-md lg:max-w-screen-lg">
      <Subtitle text="Find your voting location today!" />
      <CollageImage
        src={imgKamala}
        imageStyle="shadow-black shadow-sm rounded-md m-auto max-w-[90vw] md:max-w-md lg:max-w-lg"
        horizontal="right"
      >
        <div
          class="flex flex-col max-w-screen-sm lg:max-w-screen-md text-black text-left mx-2"
        >
          <p class="pb-1">
            <span class="text-xl font-bold">Dear SEIU 1107 Members,</span>
            <br />
            This election is crucial, and we need <b><u>you</u></b> to help elect
            pro-labor candidates like Kamala Harris and Jacky Rosen. We invite you
            to join our canvassing and phone banking efforts to reach voters and
            emphasize the importance of voting for candidates who support workers'
            rights.
          </p>
          <p class="py-1">
            <span class="text-xl"><i><b>Phonebank Events</b></i></span>
            <br />
            Join SEIU 1107 as we call Nevada voters about the upcoming election.
            Training is provided, and you can join virtually or in-person at any
            time during the shift.
          </p>
          <Button
            text="Sign Up for Phone Banking"
            styling="mx-auto hover:scale-110 text-white bg-honey-flower-800 hover:bg-honey-flower-950 active:bg-purple-darkest"
            href="https://www.mobilize.us/seiunevada/event/658670/?nvep=&hmac=&emci=9002ee53-4154-ef11-991a-6045bddbfc4b&emdi=ea000000-0000-0000-0000-000000000001&ceid="
            target="_blank"
          />
          <p class="py-1">
            <span class="text-xl"><i><b>Door Knocking Events</b></i></span>
            <br />
            Help us knock on doors and talk to voters about the importance of this
            election. Training is provided before every shift. You can join at any
            time and bring a friend!
          </p>
          <Button
            text="Sign Up for Door Knocking"
            styling="mx-auto hover:scale-110 text-white bg-honey-flower-800 hover:bg-honey-flower-950 active:bg-purple-darkest"
            href="https://www.mobilize.us/seiunevada/event/658676/?nvep=&hmac=&emci=9002ee53-4154-ef11-991a-6045bddbfc4b&emdi=ea000000-0000-0000-0000-000000000001&ceid="
            target="_blank"
          />
        </div>
      </CollageImage>
      <div class="flex flex-col">
        <h2 class="text-2xl md:text-3xl font-bold text-center py-3">
          View SEIU-Endorsed Candidates
        </h2>
        
        <Button
          text="Endorsements"
          styling="mx-auto mt-2 hover:scale-110 text-white bg-honey-flower-800 hover:bg-honey-flower-950 active:bg-purple-darkest"
          href="/endorsements"
        />
      </div>
    </div>
    <div class="m-auto max-w-[90vw] md:max-w-screen-md lg:max-w-screen-lg">
      <Subtitle text="Take Action! Pro-Labor Candidates Need YOU!" />
      <CollageImage
        src={imgKamala}
        imageStyle="shadow-black shadow-sm rounded-md m-auto max-w-[90vw] md:max-w-md lg:max-w-lg"
      >
        <div
          class="flex flex-col max-w-screen-sm lg:max-w-screen-md text-black text-left mx-2"
        >
          <p class="pb-1">
            <span class="text-xl font-bold">Dear SEIU 1107 Members,</span>
            <br />
            This election is crucial, and we need <b><u>you</u></b> to help elect
            pro-labor candidates like Kamala Harris and Jacky Rosen. We invite you
            to join our canvassing and phone banking efforts to reach voters and
            emphasize the importance of voting for candidates who support workers'
            rights.
          </p>
          <p class="py-1">
            <span class="text-xl"><i><b>Phonebank Events</b></i></span>
            <br />
            Join SEIU 1107 as we call Nevada voters about the upcoming election.
            Training is provided, and you can join virtually or in-person at any
            time during the shift.
          </p>
          <Button
            text="Sign Up for Phone Banking"
            styling="mx-auto hover:scale-110 text-white bg-honey-flower-800 hover:bg-honey-flower-950 active:bg-purple-darkest"
            href="https://www.mobilize.us/seiunevada/event/658670/?nvep=&hmac=&emci=9002ee53-4154-ef11-991a-6045bddbfc4b&emdi=ea000000-0000-0000-0000-000000000001&ceid="
            target="_blank"
          />
          <p class="py-1">
            <span class="text-xl"><i><b>Door Knocking Events</b></i></span>
            <br />
            Help us knock on doors and talk to voters about the importance of this
            election. Training is provided before every shift. You can join at any
            time and bring a friend!
          </p>
          <Button
            text="Sign Up for Door Knocking"
            styling="mx-auto hover:scale-110 text-white bg-honey-flower-800 hover:bg-honey-flower-950 active:bg-purple-darkest"
            href="https://www.mobilize.us/seiunevada/event/658676/?nvep=&hmac=&emci=9002ee53-4154-ef11-991a-6045bddbfc4b&emdi=ea000000-0000-0000-0000-000000000001&ceid="
            target="_blank"
          />
        </div>
      </CollageImage>
      <div class="flex flex-col">
        <h2 class="text-2xl md:text-3xl font-bold text-center py-3">
          Contribute to COPE
        </h2>
        <p class="text-center text-lg">
          Help our union hold elected officials accountable in this year's
          elections! Contribute to SEIU 1107's COPE fund today!
        </p>
        <Button
          text="Contribute"
          styling="mx-auto mt-2 hover:scale-110 text-white bg-honey-flower-800 hover:bg-honey-flower-950 active:bg-purple-darkest"
          href="https://act.seiu.org/a/committee-political-education?emci=dad38a93-decd-ed11-a8e0-00224832e811&emdi=4e865f38-a4ce-ed11-a8e0-00224832e811&ceid=80677448&nvep=&hmac=&nvep=&hmac="
          target="_blank"
        />
      </div>
    </div>
  </div>
  <div
    class="bg-gradient-to-b from-honey-flower-800 to-honey-flower-900 py-4 flex flex-col m-auto"
  >
    <HeadingTitle
      text="Join the Movement! Attend Our Trainings!"
      styling="hidden lg:block m-auto font-Trebuchet font-bold text-center text-supernova-400 py-5"
    />
    <div class="text-honey-flower-800 bg-supernova-500 py-3">
      <h2
        class="text-center m-auto font-bold text-2xl lg:text-3xl font-Roboto max-w-[90vw] md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl"
      >
        Attention Stewards! Attending BOTH Member Strength Trainings and
        Intermediate Steward Training is <a
          href="/membership_trainings#STEWARD_TRAININGS"
          class="underline hover:cursor-pointer hover:no-underline">MANDATORY</a
        >! Sign up <a
          href="/membership_trainings#STEWARD_TRAININGS"
          class="underline hover:cursor-pointer hover:no-underline">HERE</a
        > today!
      </h2>
    </div>

    <div class="max-w-screen-xl m-auto">
      <div class="flex flex-col lg:flex-row">
        <div class="m-auto">
          <h2
            class="m-auto font-Trebuchet font-bold text-center text-supernova-400 py-5 text-3xl lg:text-4xl max-w-lg"
          >
            Participate in our Member Strength Trainings!
          </h2>

          <div
            class="m-auto sm:max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg flex flex-col"
          >
            <CollageImage
              src={imgTraining}
              imageStyle="shadow-black shadow-sm rounded-md m-auto max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl"
              float={false}
            >
              <div class="flex flex-col max-w-screen-sm lg:max-w-screen-md">
                <p class="py-2 text-honey-flower-50 text-xl text-left mx-2">
                  The more of us who participate, the more improvements we can
                  make to our wages, benefits, and working conditions! Attend
                  one of the upcoming trainings and start making an impact on
                  your workplace.
                </p>
                <p class="py-2 text-honey-flower-50 text-xl text-left mx-2">
                  There's strength in numbers, so become a proud union member
                  today and ask ALL your coworkers to <LinkText
                    color="text-blue-300"
                    href="/join">sign up</LinkText
                  >! For more info, talk to a member of the bargaining team or
                  contact Rosy Salinas at <LinkText
                    color="text-blue-300"
                    href="mailto:rsalinas@seiunv.org"
                    >rsalinas@seiunv.org</LinkText
                  >.
                </p>
                <p
                  class="py-2 text-honey-flower-50 font-bold text-xl text-left mx-2"
                >
                  <i>Weekend trainings are on Saturdays from 10am - 2pm PST.</i>
                  <br />
                  <i
                    >Weekday trainings are split between Tuesdays and Wedensdays
                    from 6pm - 8pm PST.</i
                  >
                </p>
              </div>
            </CollageImage>
          </div>
        </div>
        <div class="m-auto">
          <h2
            class="m-auto font-Trebuchet font-bold text-center text-supernova-400 py-5 text-3xl lg:text-4xl max-w-lg"
          >
            Sign up for Stewards Training Today!
          </h2>

          <div
            class="m-auto max-w-screen-xs sm:max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg flex flex-col"
          >
            <CollageImage
              src={imgStewardsTraining}
              imageStyle="shadow-black shadow-sm rounded-md m-auto max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl"
              float={false}
            >
              <div class="max-w-screen-sm m-auto lg:max-w-screen-md">
                <p class="py-2 text-honey-flower-50 text-xl text-left mx-2">
                  SEIU 1107 supports union leaders all year long, including
                  courses designed to bolster shop steward knowledge! Trainings
                  available for all experience levels.
                </p>
                <StringCycle
                  client:visible
                  items={[
                    '"Attending a steward training is important because it equips you with the knowledge and skills to effectively advocate for workers\' rights, ensuring a workplace that values dignity, equity, and respect for all." — Alexis Esparza, DAFS, Clark County',
                    '"I took the steward training course because I was looking for the tools to help protect and represent my coworkers to make our workplace better overall." — Stephen Nolan, custodian, LVCVA',
                    "\"I've been a union member for 14 years, and I became a steward to help all employees receive fair representation and answer all their questions. It's important to be involved and stay involved.\" — Marisela Sandoval, Patient Access, UMC",
                  ]}
                  textStyle={"py-2 text-honey-flower-50 text-xl text-left mx-2 italic"}
                  duration={10000}
                />
                <p
                  class="py-2 text-honey-flower-50 font-bold text-xl text-left mx-2"
                >
                  <i
                    >All trainings at SEIU Local 1107 - 2250 S Rancho Dr. Ste
                    165 Las Vegas, NV 89102</i
                  >
                </p>
              </div>
            </CollageImage>
          </div>
        </div>
      </div>
    </div>
    <Button
      text="Sign Up for a Training!"
      styling="mt-5 mx-auto text-honey-flower-800 scale-125 hover:scale-150 bg-supernova-400 hover:bg-supernova-500 active:bg-supernova-600"
      href="/membership_trainings"
    />
  </div>
  <div class="bg-gradient-to-bl from-big-stone-700 to-big-stone-950 py-4">
    <HeadingTitle
      text="¡La lucha sigue! Join the Latino Caucus at SEIU 1107 Today!"
      styling="m-auto font-Trebuchet font-bold text-center text-big-stone-200 py-5"
    />

    <div
      class="m-auto max-w-screen-xs sm:max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg flex flex-col"
    >
      <CollageImage
        src={imgLatinoLogo}
        horizontal="right"
        imageStyle="m-auto max-w-xs sm:max-wd-sm md:max-w-md"
      >
        <div class="flex flex-col text-big-stone-100 text-xl text-left mx-2">
          <p class="py-2">
            Our Latino Caucus is newly established, but we proudly follow in the
            footsteps of our International Union Latino Caucus. Inspired by
            their legacy, we aim to build on their work and continue advocating
            for our community.
          </p>
          <p class="py-2">
            Founded to address the unique needs and challenges faced by Latinos
            in our union, our caucus is dedicated to promoting cultural pride,
            economic empowerment, and social justice. We honor the trailblazers
            who came before us and strive to uphold their commitment to unity
            and progress.
          </p>
          <p class="py-2">
            Our vision is to create an inclusive society where Latino workers
            are valued, respected, and have equal opportunities, free from
            discrimination and barriers.
          </p>
          <p class="text-big-stone-100 text-2xl pt-2 font-bold italic">
            ¡Adelante!
          </p>
          <Button
            text="Learn More"
            styling="mt-5 mx-auto text-white scale-125 hover:scale-[140%] bg-orange-600 hover:bg-orange-700 active:bg-orange-800"
            href="/caucuses/latino"
          />
        </div>
      </CollageImage>
    </div>
  </div>
  <StrongerTogether />
  <LatestNews />
  <div class="py-4 bg-gradient-to-b from-honey-flower-200 to-honey-flower-300">
    <HeadingTitle text="Why We're Joining Together" />
    <div class="flex m-auto max-w-[90vw] lg:max-w-screen-lg">
      <CollageImage src={imgTogether}>
        <div class="text-md lg:text-lg">
          <p class="py-2">
            Public service, home care and health care workers are joining
            together to get a real say over our wages, staffing, retirement, and
            working conditions. We're united, and we're building the strength
            necessary to secure record contracts, win policy changes in the
            state legislature and raise standards for all working people.
          </p>
          <p class="py-2 pb-5">
            We're standing up to protect the marginalized, fight for the quality
            services that Nevada residents and our patients deserve, and win
            fair pay increases for everyone—including chronically underpaid
            women and people of color—throughout our state.
          </p>
        </div>
        <Button href="/join" text="Join Us" />
      </CollageImage>
    </div>
  </div>

  <SocialMediaFeeds />
</Layout>

<style>
  .shadowClass {
    text-shadow: 3px 3px 3px black;
  }
  .tinyShadow {
    text-shadow: 3px 3px 2px black;
  }

  .video-container {
    position: relative;
    height: 0;
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>

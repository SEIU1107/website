import LinkText from "../components/LinkText.astro";
import Button from "../components/Button.svelte";

import imgTogether from "../images/index/JoinTogether.jpg";
import imgTraining from "../images/strength_training/BigRoom.jpg";

// Banners
import imgAFRAM from "../images/caucuses/AFRAM/2025 Flyer.png";

// Constants
const execBoardButtonStyle =
  "mx-2 no-underline not-prose text-white bg-honey-flower-800 hover:scale-110 hover:bg-honey-flower-950 active:bg-purple-darkest";
---


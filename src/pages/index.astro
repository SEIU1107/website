---
import Layout from "../layouts/Layout.astro";
import LatestNews from "../components/Index/LatestNews.astro";
import SocialMediaFeeds from "../components/Index/SocialMediaFeeds.astro";
import StrongerTogether from "../components/Index/StrongerTogether.astro";
import HeadingTitle from "../components/HeadingTitle.astro";
import CollageImage from "../components/CollageImage.astro";
import Button from "../components/Button.astro";

import imgTogether from "../images/index/JoinTogether.jpg";

import imgStrengthTraining from "../images/strength_training/thumbnail.jpg";
import { Image } from "astro:assets";
---

<Layout>
    
    <div class="bg-gradient-to-b from-supernova-300 to-supernova-500 py-4">
        <HeadingTitle text="Participate In Our Member Trainings!" />
        <p class="text-center text-2xl italic font-bold py-2">
            Let's make this a year like no other for the Labor Movement in Nevada!
        </p>
        <div class="m-auto max-w-screen-md lg:max-w-screen-lg flex flex-col">
            <CollageImage src={imgStrengthTraining} imageStyle="shadow-black shadow-sm rounded-md m-auto max-w-md lg:max-w-xl">
                <p class="py-2 text-black text-bold text-xl text-left mx-2">
                    Membership Trainings hosted at SEIU 1107 empower members 
                    to become more active in the labor movement! The more workers
                    who get active, the more improvements we can secure to our
                    wages, benefits, and working conditions.
                </p>
                <p class="py-2 text-black text-bold text-xl text-left mx-2">
                    We are hosting monthly workshops through June. Click below 
                    for more details!
                </p>
                <div class="py-5 flex justify-center scale-150">
                    <Button text="Workshop Dates" href="/strength_training" />
                </div>
                
            </CollageImage>        
        </div>
        
    </div>

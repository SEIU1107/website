---
import Layout from "../layouts/Layout.astro";
import LatestNews from "../components/Index/LatestNews.astro";
import SocialMediaFeeds from "../components/Index/SocialMediaFeeds.astro";
import StrongerTogether from "../components/Index/StrongerTogether.astro";
import HeadingTitle from "../components/HeadingTitle.svelte";
import CollageImage from "../components/CollageImage.astro";
import Button from "../components/Button.svelte";
import Subtitle from "../components/Subtitle.svelte";
import ImageCycle from "../components/ImageCycle.svelte";
import Carousel from "../components/Carousel.svelte";

import BannerText from "../components/Index/Banner/BannerText.astro";
import ScholarshipBanner from "../components/Index/ScholarshipBanner.astro";

// Banners
import HomecareGraphic from "../images/index/HomecareGraphic.jpg";
import DOAGraphic from "../images/index/DOAGraphic.png";
import CCGraphic from "../images/index/CCGraphic.png";
import StRoseGraphic from "../images/index/StRoseGraphic.png";

// Mobile Banners
import HomecareMobile from "../images/index/HomecareMobile.png";
import CCMobile from "../images/index/CCMobile.png";
import StRoseMobile from "../images/index/StRoseMobile.png";
import DOAMobile from "../images/index/DOAMobile.png";

import imgTogether from "../images/index/JoinTogether.jpg";
import imgTraining from "../images/strength_training/BigRoom.jpg";

// Immigration Workshop
import imgImmigration1 from "/public/post_imgs/2024/ImmigrationWorkshop/img1.png";
import imgImmigration2 from "/public/post_imgs/2024/ImmigrationWorkshop/img2.png";
import imgImmigration3 from "/public/post_imgs/2024/ImmigrationWorkshop/img3.png";
import imgImmigration4 from "/public/post_imgs/2024/ImmigrationWorkshop/img4.png";
import imgImmigration5 from "/public/post_imgs/2024/ImmigrationWorkshop/img5.png";
import imgImmigration6 from "/public/post_imgs/2024/ImmigrationWorkshop/img6.png";
import imgImmigration7 from "/public/post_imgs/2024/ImmigrationWorkshop/img7.png";

// Lobby Day
import imgLobbyDay1 from "/public/post_imgs/2025/LobbyDay/img2.png";
import imgLobbyDay2 from "/public/post_imgs/2025/LobbyDay/img13.png";
import imgLobbyDay3 from "/public/post_imgs/2025/LobbyDay/img8.png";
import imgLobbyDay4 from "/public/post_imgs/2025/LobbyDay/img16.png";
import imgLobbyDay5 from "/public/post_imgs/2025/LobbyDay/img17.png";
import imgLobbyDay6 from "/public/post_imgs/2025/LobbyDay/img4.png";

// Banners
import imgAFRAM from "../images/caucuses/AFRAM/2025 Flyer.png";
import imgLatino from "../images/caucuses/Latino/2025 Flyer.png";
---

<Layout>
  <!-- Video Recap -->

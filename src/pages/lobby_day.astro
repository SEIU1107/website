<Layout title="2025 Lobby Day SEIU 1107">
  <main
    class="flex h-[40vh] bg-[url(/src/images/lobby_day/BannerImage.png)] bg-cover bg-center"
  >
    <div class="m-auto">
      <div class="max-w-screen-sm">

---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import HeadingTitle from "../components/HeadingTitle.svelte";

import CareAgenda1 from "../images/lobby_day/CARE Agenda 2025-1.png";
import CareAgenda2 from "../images/lobby_day/CARE Agenda 2025-2.png";
---

<Layout title="2025 Lobby Day SEIU 1107">
  <main
    class="flex h-[40vh] bg-[url(/src/images/lobby_day/Banner.png)] bg-cover bg-center"
  >
    <div class="m-auto">
      <div class="max-w-screen-sm">
        <div
          class="text-white tinyShadow font-Trebuchet font-bold uppercase text-center text-5xl lg:text-6xl"
        >
          SEIU Local 1107
        </div>
        <h1
          class="shadowClass uppercase font-bold font-Roboto text-supernova-400 text-center text-7xl lg:text-9xl mt-4 lg:mt-2"
        >
          Lobby Day 2025
        </h1>
      </div>
    </div>
  </main>
  <div class="max-w-[85vw] md:max-w-screen-sm m-auto flex flex-col xl:flex-row justify-center">
    <Image
      src={CareAgenda1}
      alt=""
      class="lg:mx-1 my-1 rounded-sm shadow-md shadow-black"
    />
    <Image
      src={CareAgenda2}
      alt=""
      class="lg:mx-1 my-1 rounded-sm shadow-md shadow-black"
    />
  </div>
  <HeadingTitle text="Our 2025 Priorities" />
  <div class="py-3 m-auto flex flex-col lg:grid lg:grid-cols-2">
    <div></div>
  </div>

  <style>
    .shadowClass {
      text-shadow: 3px 3px 3px black;
    }
    .tinyShadow {
      text-shadow: 3px 3px 2px black;
    }
  </style>
</Layout>

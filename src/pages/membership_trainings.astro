          <!-- 3 -->
          <div class="my-2 mx-5 p-2 bg-honey-flower-100 rounded-md">
            <div
              class="text-black font-bold text-lg sm:text-xl text-left lg:text-center"
            >
              Advanced Training
              <br class="block sm:hidden lg:block" />
              (<LinkText

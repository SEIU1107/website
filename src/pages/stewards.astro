---
import Layout from "../layouts/Layout.astro";
import ShopCard from "../components/Stewards/ShopCard.astro";
import HeadingTitle from "../components/HeadingTitle.astro";

// Images
import CCBack from "/seiu-website/src/images/shop_imgs/Clark-County-Button.png";
import CCFront from "/seiu-website/src/images/shop_imgs/Clark-County-Solid-Button.png";

import LVCVABack from "/seiu-website/src/images/shop_imgs/LVCVA-Button.png";
import LVCVAFront from "/seiu-website/src/images/shop_imgs/LVCVA-Solid-Button.png";

import RenownBack from "/seiu-website/src/images/shop_imgs/Renown-Button.png";
import RenownFront from "/seiu-website/src/images/shop_imgs/Renown-Solid-Button.png";

import RTCBack from "/seiu-website/src/images/shop_imgs/RTC-Button.png";
import RTCFront from "/seiu-website/src/images/shop_imgs/RTC-Solid-Button.png";

import SNHDBack from "/seiu-website/src/images/shop_imgs/SNHD-Button.png";
import SNHDFront from "/seiu-website/src/images/shop_imgs/SNHD-Solid-Button.png";

import SNRHABack from "/seiu-website/src/images/shop_imgs/SNRHA-Button.png";
import SNRHAFront from "/seiu-website/src/images/shop_imgs/SNRHA-Solid-Button.png";

import StRoseBack from "/seiu-website/src/images/shop_imgs/St-Rose-Button.png";
import StRoseFront from "/seiu-website/src/images/shop_imgs/St-Rose-Big-Button.png";

import SunriseBack from "/seiu-website/src/images/shop_imgs/Sunrise-Button-1.png";
import SunriseFront from "/seiu-website/src/images/shop_imgs/Sunrise-Solid-Button.png";

import UMCBack from "/seiu-website/src/images/shop_imgs/UMC-Button.png";
import UMCFront from "/seiu-website/src/images/shop_imgs/UMC-Solid-Button.png";

const shopCardData = [
    {
        backImg: CCBack,
        frontImg: CCFront,
        urlDest: "/seiu-website/stewards/Clark County",
    }, // Clark County
    {
        backImg: LVCVABack,
        frontImg: LVCVAFront,
        urlDest: "/seiu-website/stewards/LVCVA",
    }, // LVCVA
    {
        backImg: RenownBack,
        frontImg: RenownFront,
        urlDest: "/seiu-website/stewards/Renown",
    }, // Renown
    {
        backImg: RTCBack,
        frontImg: RTCFront,
        urlDest: "/seiu-website/stewards/RTC",
    }, // RTC
    {
        backImg: SNHDBack,
        frontImg: SNHDFront,
        urlDest: "/seiu-website/stewards/SNHD",
    }, // SNHD
    {
        backImg: SNRHABack,
        frontImg: SNRHAFront,
        urlDest: "/seiu-website/stewards/SNRHA",
    },
    {
        backImg: StRoseBack,
        frontImg: StRoseFront,
        urlDest: "/seiu-website/stewards/StRose",
    }, // St Rose
    {
        backImg: SunriseBack,
        frontImg: SunriseFront,
        urlDest: "/seiu-website/stewards/Sunrise",
    }, // Sunrise
    {
        backImg: UMCBack,
        frontImg: UMCFront,
        urlDest: "/seiu-website/stewards/UMC",
    }, // UMC
];
---

<Layout title="SEIU 1107 Stewards">
    <HeadingTitle text="SEIU 1107 Stewards" />
    <p class="flex m-auto max-w-md text-lg text-center">
        Don't see your shop? Contact the SEIU 1107 Representation Department at
        representation@seiunv.org or (702) 386 - 8849
    </p>
    <section class="flex justify-center">
        <section class="shopGrid">
            <div class="container">
                {
                    shopCardData.map((shop) => (
                        <ShopCard
                            backImg={shop.backImg}
                            frontImg={shop.frontImg}
                            urlDest={shop.urlDest}
                        />
                    ))
                }
            </div>
        </section>
    </section>
</Layout>

<style>
    .shopGrid .container {
        vertical-align: center;
        display: grid;
        grid-template-columns: repeat(3, 3fr);
        margin: auto;
    }

    @media (max-width: 767px) {
        .shopGrid {
        }
        .shopGrid .container {
            grid-template-columns: 1fr;
        }
    }
</style>
